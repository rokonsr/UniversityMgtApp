@{
    ViewBag.Title = "ViewCourse";
}

<style>
    fieldset.scheduler-border {
        border: solid 1px #DDD !important;
        padding: 0px 35px;
        border-bottom: none;
        border-radius: 10px;
        width: 600px;
    }

    legend.scheduler-border {
        width: auto !important;
        border: none;
        font-size: 20px;
        font-weight: bold;
    }

    table th {
        text-align: center;
        border: 1px solid #e9e9e9;
        height: 40px;
    }

    table tr td {
        border: 1px solid #e9e9e9;
        padding: 3px;
        height: 30px;
    }

    #DepartmentId {
        width: 200px;
    }

</style>


<fieldset class="scheduler-border">
    <legend class="scheduler-border">View Course Statics</legend>

    <table  width="100%">
        <tr>
            <td style="text-align: right; border: none;">Department</td>
            <td style="border: none">
                @Html.DropDownList("DepartmentId", new SelectList(ViewBag.Department, "DepartmentId", "DepartmentName"), "--Select Department--", new { @class = "form-control" })
            </td>
        </tr>
    </table>

    <br />
    <table style="width: 100%" id="ViewCourseStatic">
        <tr style="background-color: #e9e9e9;">
            <th>Code</th>
            <th>Name/Title</th>
            <th>Semester</th>
            <th>Assigned To</th>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>

    <br />
</fieldset>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

        <script>
        $(document).ready(function() {
            $("#DepartmentId").change(function() {
                var departmentId = $("#DepartmentId").val();

                $("#ViewCourseStatic").empty();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CourseStatic", "CourseAssign")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({ departmentId: departmentId }),

                    success: function(courses) {
                        $("#ViewCourseStatic").append('<tr style="background-color: #e9e9e9; height:40px;"><th>Code</th><th>Name/Title</th><th>Semester</th><th>Assigned To</th></tr>');
                        $.each(courses, function(key, value) {
                            $("#ViewCourseStatic").append('<tr><td>' + value.CourseCode + '</td><td>' + value.CourseName + '</td><td>' + value.Semester + ' Semester' + '</td><td>' + value.TeacherName + '</td></tr>');
                        });
                    },

                });
            });
        });
    </script>

}







