@model UniversityMgtApp.Models.Student

@{
    ViewBag.Title = "Save";
}

<style>
    fieldset.scheduler-border {
        border: solid 1px #DDD !important;
        padding: 0 45px;
        border-bottom: none;
        border-radius: 10px;
        width: 600px;
    }

    legend.scheduler-border {
        width: auto !important;
        border: none;
        font-size: 20px;
        font-weight: bold;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Register Student</legend>

            <div class="form-group">
                @Html.LabelFor(model => model.StudentName, new { @class = "col-md-4" })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.StudentName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "col-md-4" })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ContactNumber, new { @class = "col-md-4" })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RegistrationDate, new { @class = "col-md-4" })
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.RegistrationDate, new { @class = "form-control datePicker", @Value = DateTime.Now.ToShortDateString() })
                    @Html.ValidationMessageFor(model => model.RegistrationDate, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Address, new { @class = "col-md-4" })
                <div class="col-md-6">
                    @Html.TextAreaFor(model => model.Address, 3, 20, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DepartmentCode, new { @class = "col-md-4" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.DepartmentCode, new SelectList(ViewBag.Department, "DepartmentCode", "DepartmentName"), "--Select Department--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DepartmentCode, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-6">
                    <input type="submit" value="Register" class="btn btn-default" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-6">
                    <span style="color:green; font-weight:bold;">@ViewBag.Success</span>
                    <span style="color:red; font-weight:bold;">@ViewBag.Exist</span>
                </div>
            </div>
        </fieldset>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
   
    <script type="text/javascript">
        $(document).ready(function () {
            $(function () {
                $(".datePicker").datepicker({ dateFormat: 'dd-mm-yyyy', type: Text });
            });
        });
    </script>
}



