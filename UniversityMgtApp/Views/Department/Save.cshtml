@model UniversityMgtApp.Models.Department

@{
    ViewBag.Title = "Save";
}

<style>
    fieldset.scheduler-border {
        border: solid 1px #DDD !important;
        padding: 0px 55px;
        border-bottom: none;
        border-radius: 10px;
        width: 600px;
    }

    legend.scheduler-border {
        width: auto !important;
        border: none;
        font-size: 20px;
        font-weight:bold;
    }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)

        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Save Department</legend>
            <div class="form-group">
                @Html.LabelFor(model => model.DepartmentCode, new { @class = "col-md-3" })
                <div class="col-md-7">
                    @Html.TextBoxFor(model => model.DepartmentCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DepartmentCode, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DepartmentName, new { @class = "col-md-3" })
                <div class="col-md-7">
                    @Html.TextBoxFor(model => model.DepartmentName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "validation" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-7">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-7">
                    <span style="color:green; font-weight:bold;">@ViewBag.Success</span>
                    <span style="color:red; font-weight:bold;">@ViewBag.Exist</span>
                </div>
            </div>
        </fieldset>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}